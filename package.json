{
  "name": "hello-npm-script",
  "version": "1.0.0",
  "config": {
    "port": 3000
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint:js": "eslint client/**/*.js",
    "lint:css": "stylelint client/**/*.less",
    "lint:json": "jsonlint --quiet client/**/*.json",
    "lint": "npm-run-all --parallel lint:*",
    "mochas": "mocha tests/",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test mocha tests/",
    "watch:test": "npm test -- --watch",
    "watch:lint": "onchange -i \"**/*.js\" \"**/*.less\" -v -- npm run lint",
    "watch": "npm-run-all --parallel watch:*",
    "test:code": "npm run lint:js && npm run lint:css && npm run lint:json && npm run lint:markdown && npm test",
    "test:parallel": "# 并行运行所有代码检查和单元测试 \n npm run lint:js & npm run lint:css & npm run lint:json & npm run lint:markdown & npm test",
    "test:code2": "npm-run-all lint:* mochas",
    "cover": "node scripts/cover.js",
    "cover:serve": "scripty",
    "cover:open": "scripty",
    "client": "npm-run-all --parallel client:*",
    "client:reload-server": "livereload client/",
    "client:static-server": "http-server client/",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "prebuild": "rm -rf dist && mkdir -p dist/{images,styles,scripts}",
    "build:images": "scripty",
    "build:styles": "scripty",
    "build:scripts": "scripty",
    "build:hash": "scripty",
    "build": "scripty",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "lint-staged": {
    "client/**/*.js": "eslint",
    "client/**/*.less": "stylelint",
    "*.css": "stylelint",
    "client/**/*.json": "jsonlint --quiet"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "cpr": "^3.0.1",
    "cross-env": "^5.2.0",
    "cross-var": "^1.1.0",
    "cssmin": "^0.4.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "hashmark": "^5.0.0",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "imagemin-cli": "^4.0.0",
    "jsonlint": "^1.6.3",
    "less": "^3.9.0",
    "lint-staged": "^8.1.5",
    "livereload": "^0.7.0",
    "make-dir-cli": "^2.0.0",
    "markdownlint-cli": "^0.14.0",
    "mocha": "^6.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "onchange": "^5.2.0",
    "opn-cli": "^4.0.0",
    "replaceinfiles": "^1.1.4",
    "rimraf": "^2.6.3",
    "scripty": "^1.9.1",
    "shelljs": "^0.8.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "uglify-es": "^3.3.9"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      ".*.js"
    ]
  },
  "dependencies": {}
}
